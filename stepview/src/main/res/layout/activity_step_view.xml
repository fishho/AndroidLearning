<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.cfish.stepview.StepViewActivity">

    <com.cfish.stepview.HorizontalStepView
        android:id="@+id/step_view0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
    <!--<com.cfish.stepview.VerticalStepView-->
        <!--android:id="@+id/step_view0"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="vertical stepview"-->
        <!--/>-->
    <com.cfish.stepview.CheckView
        android:id="@+id/check_view"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_below="@id/step_view0">
    </com.cfish.stepview.CheckView>
    <com.cfish.stepview.ForTryView
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/step_view0"/>
</RelativeLayout>
